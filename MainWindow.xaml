<Window x:Class="uas_pogdas_rev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uas_pogdas_rev"
        WindowState="Maximized"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Selamat Datang di Aplikasi Sekolah" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="DarkSlateBlue"/>

        <Button Content="Logout" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Width="80" Height="40" 
                Margin="10" 
                Click="Logout_Click"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Daftar Guru" Width="200" Click="OpenGuruPage"/>
            <Button Content="Daftar Murid" Width="200" Click="OpenMuridPage"/>
            <Button Content="Daftar Mata Pelajaran" Width="200" Click="OpenMataPelajaranPage"/>
            <Button Content="Input Data" Width="200" Click="OpenInputPage"/>
        </StackPanel>
    </Grid>
</Window>
